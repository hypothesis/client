{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "lib": ["es2018", "dom"],
    "jsx": "react",
    "jsxFactory": "createElement",
    "module": "commonjs",
    "noEmit": true,
    "strictNullChecks": true,
    "target": "ES2020"
  },
  "include": ["**/*.js", "**/*.ts"],
  "exclude": [
    // Tests are not checked.
    "**/test/**/*.js",
    "test-util/**/*.js",
    "karma.config.js"
  ]
}
